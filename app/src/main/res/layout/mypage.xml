<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <TextView
        android:id="@+id/textView19"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:text="황교원님의 총 봉사시간"
        android:textColor="#333333"
        android:textSize="20dp" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/numberOfTime"
        android:layout_width="220dp"
        android:layout_height="107dp"
        android:gravity="right"
        android:text="00"
        android:textColor="#333333"
        android:textSize="100sp" />

    <TextView
        android:id="@+id/textOftime"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="left|bottom"
        android:text="시간"
        android:textColor="#333333"
        android:textSize="40sp" />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/targetTime"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:gravity="right|bottom"
            android:text="목표봉사시간  : "
            android:textColor="#333333"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/targetTimes"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center|bottom"
            android:text="00시간"
            android:textColor="#333333"
            android:textSize="20sp" />

        <Button
            android:id="@+id/editTargetTime"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/signup_btn"
            android:text="수정"
            android:textColor="#333333"
            android:textStyle="bold"></Button>
    </LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/totalVolunteers"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:gravity="bottom|right"
            android:text="봉사활동건수  : "
            android:textColor="#333333"
            android:textSize="20sp" />

    <TextView
        android:id="@+id/totalVolunteersNumber"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:gravity="center|bottom"
        android:text="00시간"
        android:textColor="#333333"
        android:textSize="20sp" />

        <Button
            android:id="@+id/checkTotalVolunteers"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/signup_btn"
            android:text="조회"
            android:textColor="#333333"
            android:textStyle="bold"></Button>
</LinearLayout>

    <Button
        android:id="@+id/checkVolunteers"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/login_btn"
        android:text="신청한 봉사활동 확인"
        android:textColor="#333333"
        android:textStyle="bold"></Button>

    <Button
        android:id="@+id/Setting"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/signup_btn"
        android:text="설정"
        android:textColor="#333333"
        android:textStyle="bold"></Button>

    <Button
        android:id="@+id/Logout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/signup_btn"
        android:text="로그아웃"
        android:textColor="#333333"
        android:textStyle="bold"></Button>
</LinearLayout>