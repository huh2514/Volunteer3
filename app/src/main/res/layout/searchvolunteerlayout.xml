<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_weight="1"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/n"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="검색어 : " />
        <EditText
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="검색" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="지역" />

        <Spinner
            android:id="@+id/seladdr1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:entries="@array/지역"
            android:textSize="14sp" />

        <Spinner
            android:id="@+id/seladdr2"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:entries="@array/인천"
            android:textSize="14sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시작일" />
        <Spinner
            android:id="@+id/StartMonths"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:entries="@array/월"
            android:textSize="14sp" />
        <Spinner
            android:id="@+id/StartDays"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:entries="@array/일"
            android:textSize="14sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="종료일" />
        <Spinner
            android:id="@+id/EndMonths"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:entries="@array/월"
            android:textSize="14sp" />
        <Spinner
            android:id="@+id/EndDays"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:entries="@array/일"
            android:textSize="14sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnSearch"
            android:layout_width="103dp"
            android:layout_height="wrap_content"
            android:text="검색" />
    </LinearLayout>

</LinearLayout>


