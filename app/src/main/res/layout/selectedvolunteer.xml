<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_margin="20dp"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/seldTItle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="TextView" />

    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/texttime"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="봉사기간" />

        <TextView
            android:id="@+id/seldTime"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="TextView" />
    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textplace"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="봉사장소" />

        <TextView
            android:id="@+id/seldPlace"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="TextView" />
    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/texthour"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="봉사시간" />

        <TextView
            android:id="@+id/seldHour"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="TextView" />
    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textntime"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="모집기간" />

        <TextView
            android:id="@+id/seldNTime"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="TextView" />
    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/texthoumany"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="모집인원" />

        <TextView
            android:id="@+id/seldhoumany"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="TextView" />
    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textapplyd"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="신청인원" />

        <TextView
            android:id="@+id/seldApplyd"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="TextView" />
    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textboon"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="봉사분야" />

        <TextView
            android:id="@+id/seldBoon"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="TextView" />
    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textRecPeriod"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="모집기관" />

        <TextView
            android:id="@+id/seldRecPeriod"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="TextView" />
    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textRegist"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="등록기관" />

        <TextView
            android:id="@+id/seldRegist"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="TextView" />
    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/seldContents"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="TextView" />
    </LinearLayout>

    <Button
        android:id="@+id/applyBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onBtnClicked"
        android:text="봉사활동 신청하러가기" />

</LinearLayout>